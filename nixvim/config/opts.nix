{
  updatetime = 50; # Faster completion

  number = true;
  relativenumber = true;

  tabstop = 4;
  softtabstop = 4;
  shiftwidth = 4;
  expandtab = true;

  smartindent = true;
  autoindent = true;

  wrap = true;

  incsearch = true;
  hlsearch = true;

  termguicolors = true;

  scrolloff = 8;

  ignorecase = true;
  smartcase = true;
  wildmode = "list:longest";

  colorcolumn = "80";

  swapfile = false;
  backup = false;
  undofile = true; # Build-in persistent undo
}
